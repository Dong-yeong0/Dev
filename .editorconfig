# ! EditorConfig is awesome: https://EditorConfig.org

# ! Top-most Editorconfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.json]
indent_size = 2

[*.yml]
indent_size = 2
